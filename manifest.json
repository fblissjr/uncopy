{
  "manifest_version": 3,
  "name": "UnCopy - Link Tracker Remover",
  "version": "1.2.0",
  "description": "Removes tracking parameters and unwraps redirect URLs",
  "permissions": [
    "clipboardWrite",
    "activeTab",
    "storage",
    "contextMenus",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Clean URL"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
