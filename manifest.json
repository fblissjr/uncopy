{
  "manifest_version": 3,
  "name": "UnCopy - Link Tracker Remover",
  "version": "1.0.0",
  "description": "Automatically removes tracking parameters from URLs",
  "permissions": [
    "clipboardWrite",
    "clipboardRead",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Clean URL from clipboard"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}